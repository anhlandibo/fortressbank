# Transaction Service - Environment Variables
# Copy this file to .env and update values as needed

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5433/transactiondb
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=123456

# Server Configuration
SERVER_PORT=4002

# Config Server (optional for standalone mode)
SPRING_CLOUD_CONFIG_URI=http://localhost:8889
SPRING_CLOUD_CONFIG_ENABLED=false

# Eureka Discovery (optional for standalone mode)
EUREKA_CLIENT_ENABLED=false
EUREKA_DEFAULT_ZONE=http://localhost:8761/eureka

# JWT Configuration (for production with Kong/Keycloak)
JWT_ISSUER_URI=http://localhost:8888/realms/fortressbank-realm

# Spring Profile
SPRING_PROFILES_ACTIVE=dev
