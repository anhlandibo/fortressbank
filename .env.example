# =============================================================================
# FORTRESSBANK - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git - it contains sensitive credentials
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CREDENTIALS
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# User Service Database
USER_DB_NAME=userdb
USER_DB_PORT=5433

# Account Service Database
ACCOUNT_DB_NAME=accountdb
ACCOUNT_DB_PORT=5434

# Transaction Service Database
TRANSACTION_DB_NAME=transactiondb
TRANSACTION_DB_PORT=5435

# Keycloak Database
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=your_keycloak_db_password
KEYCLOAK_DB_NAME=keycloak

# -----------------------------------------------------------------------------
# KEYCLOAK CONFIGURATION
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your_admin_password
KEYCLOAK_PORT=8888

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# RABBITMQ CONFIGURATION
# -----------------------------------------------------------------------------
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (SENDGRID)
# -----------------------------------------------------------------------------
# For SendGrid SMTP (Recommended for production)
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=SG.your_sendgrid_api_key_here

# Email sender information (must be verified in SendGrid)
EMAIL_FROM=your-verified-email@example.com
EMAIL_FROM_NAME=Fortress Bank

# Alternative: Gmail SMTP (For testing only)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your_gmail_app_password

# -----------------------------------------------------------------------------
# SPRING CLOUD CONFIG
# -----------------------------------------------------------------------------
SPRING_CLOUD_CONFIG_URI=http://config-server:8888

# -----------------------------------------------------------------------------
# EUREKA DISCOVERY
# -----------------------------------------------------------------------------
EUREKA_DEFAULT_ZONE=http://discovery:8761/eureka

# -----------------------------------------------------------------------------
# JWT/OAUTH2 CONFIGURATION
# -----------------------------------------------------------------------------
JWT_ISSUER_URI=http://keycloak:8080/realms/fortressbank-realm

# -----------------------------------------------------------------------------
# SERVICE PORTS
# -----------------------------------------------------------------------------
CONFIG_SERVER_PORT=8889
DISCOVERY_PORT=8761
USER_SERVICE_PORT=4000
ACCOUNT_SERVICE_PORT=4001
NOTIFICATION_SERVICE_PORT=4002
TRANSACTION_SERVICE_PORT=4004
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001

# -----------------------------------------------------------------------------
# SPRING PROFILES
# -----------------------------------------------------------------------------
SPRING_PROFILES_ACTIVE=docker
